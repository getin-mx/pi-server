#parse("/includes/macros.vm")
<!doctype html>
<html lang="en-us">
<head>
	<meta charset="utf-8">
	<title>#springMessage("app.title") | #springMessage("app.map")</title>

	<meta name="description" content='#springMessage("app.map")'>
	<meta name="author" content='#springMessage("app.url")'>

#parse("includes/header.vm")

	<script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=true"></script>
	<script type="text/javascript" src="/main-be/js/gmaps.js"></script>

	<!-- local functionality script -->
	<script src="/main-be/js/map.js"></script>
</head>
<body>
#parse("includes/topmenu.vm")
#parse("includes/leftmenu.vm")

	<section id="content">

		<!-- content -->
		<div class="g8 nodrop normalHeaderHeight">
			<div style="margin-left: 10px;">
				<h1>#springMessage("app.map")</h1>
				<p>#springMessage("app.map.description")</p>
			</div>
		</div>
	
		<div class="g4 nodrop normalHeaderHeight">
			<div style="margin-top: 25px;">
				<strong>#springMessage("app.map.totalActiveUsersCount"): </strong> <span id="totalActiveUsersCount"></span> <br/>
				<strong>#springMessage("app.map.totalDevices"): </strong> <span id="totalDevices"></span> <br/>
				<strong>#springMessage("app.map.totalShoppings"): </strong> <span id="totalShoppings"></span> <br/>
				<strong>#springMessage("app.map.totalStreetStores"): </strong> <span id="totalStreetStores"></span> <br/>
			</div>
		</div>

		<div>
			<div id="breadcrumbcontent">
				<!-- Map -->
				<div>
					<form id="mapForm" method="post" autocomplete="off">
						<fieldset>

							<div id="map"></div>

							<section>
								<div id="contactFormMsg"></div>
							</section>

						</fieldset>
					</form>
				</div>
			</div>
		</div>

	</section>
#parse("includes/footer.vm")
</body>
</html>