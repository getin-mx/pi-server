#parse("/includes/macros.vm")
<!doctype html>
<html lang="en-us">
<head>
	<meta charset="utf-8">
#if( $update )
	<title>#springMessage("app.title") | #springMessage("app.offer.edit")</title>
#else
	<title>#springMessage("app.title") | #springMessage("app.offer")</title>
#end

	<meta name="description" content='#springMessage("app.offer.description")'>
	<meta name="author" content='#springMessage("app.url")'>

#parse("includes/header.vm")

	<!-- local functionality script -->
	<script src="/main-be/js/offer.js"></script>
	
	#if( $canwrite == false )
	<script>
		$(document).ready(function() {
			$.setReadOnly();
		});
	</script>
	#end
</head>
<body>
#parse("includes/topmenu.vm")
#parse("includes/leftmenu.vm")
	<!-- content -->
	<section id="content">
		<ul id="headbreadcrumb" class="breadcrumb" data-connect="breadcrumbcontent">
			<li><a href="#">#springMessage("app.offer.generalData")</a></li>
			#if( $update )
			<li><a href="#">#springMessage("app.offer.media")</a></li>
			<li><a href="#">#springMessage("app.audit")</a></li>
			<li><a href="#">#springMessage("app.offer.privacyPolicies")</a></li>
			<li><a href="#">#springMessage("app.user.notifications")</a></li>
			#end
		</ul>

		<div class="g12 nodrop">
			<table>
				<tr>
					<td width="110">
					#if( $offer.AvatarId )
						<a class="fancybox" href="/img/$!offer.AvatarId" title="$!offer.Fullname"><img src="/img/$!offer.AvatarId" width="100" height="100" alt=""></a>
					#else
						<a class="fancybox" href="/main-be/css/images/defaultavatar.png"><img src="/main-be/css/images/defaultavatar.png" width="100" height="100" alt=""></a>
					#end
					</td>
					<td style="text-align: left;">
						<div class="g12 nodrop">
							#if( $update )
								<h1>#springMessage("app.offer.edit")</h1>
							#else
								<h1>#springMessage("app.offer")</h1>
							#end
							<p>#springMessage("app.offer.description")</p>
						</div>
					</td>
				</tr>
			</table>
		</div>
		<div>
			<div id="breadcrumbcontent">
				<!-- Offer Profile -->
				<div>
					<form id="contactForm" method="post" #if( $canwrite == true ) action="/main-be/doUpdateOffer" #end autocomplete="off">
						<fieldset>
							<label style="height: 30px;">
								#springMessage("app.offer.generalData")
							#if( $canwrite == true )
								#if( $offerProposalId ) 
									<button class="fr submit">#springMessage("app.button.approve")</button>
									<button class="fr" onclick="window.location='/main-be/rejectOfferProposal/$offerProposalId';">#springMessage("app.button.reject")</button>
								#else
									<button class="fr submit">#springMessage("app.button.submit")</button>
								#end
							#else
								#if( $offerProposalId ) 
									<button class="fr" onclick="window.location='/main-be/offerProposalList';" >#springMessage("app.button.back")</button>
								#else
									<button class="fr" onclick="window.location='/main-be/offerList';" >#springMessage("app.button.back")</button>
								#end
							#end
							</label>
							<section>
								<label>#springMessage("data.offerName")</label>
								<div>
								<input style="width: 97% !important;" type="text" id="name" required data-errortext='#springMessage("error.name")' value="$!offer.Name">
								#if ($update)
									<input type="hidden" id="offerid" value="$offer.Identifier">
									<input type="hidden" id="crudtype" value="edit">
								#else
									<input type="hidden" id="offerid" value="">
									<input type="hidden" id="crudtype" value="create">
								#end
								<input type="hidden" id="offerProposalId" value="$!offerProposalId">
								<input type="hidden" id="source" value="$!offer.Source">
								<input type="hidden" id="origin" value="$!offer.Origin">
								</div>
							</section>

							<section>
								<label>#springMessage("data.offerType")</label>
								<div>
									#select("offerTypeId", $!offer.OfferTypeId, $offerTypeNames, $offerTypeIds)
								</div>
							</section>

							<section>
								<label>#springMessage("data.offerBriefDescription")</label>
								<div>
									<textarea id="description" class="html" rows="15" data-buttons="bold|italic|underline">$!offer.description</textarea>
								</div>
							</section>

							#if( $offerProposalId )
							#else
							<section>
								<label for="avatar">#springMessage("data.avatar")</label>
								<div>
									<table>
										<tr>
											<td width="130" style="vertical-align: middle;">
											#if( $offer.AvatarId )
												<a id="avatarAnchor" class="fancybox" href="/img/$!offer.AvatarId" title="$!offer.Fullname"><img id="avatarImage" src="/img/$!offer.AvatarId" width="116" height="116" alt=""></a>
											#else
												<a id="avatarAnchor" class="fancybox" href="/main-be/css/images/defaultavatar.png" title=""><img id="avatarImage" src="/main-be/css/images/defaultavatar.png" width="116" height="116" alt=""></a>
											#end
											<input type="hidden" id="avatarId"/>
											</td>
											<td>
												<input type="file" id="avatar">
											</td>
										</tr>
									</table>
								</div>
							</section>
							#end

							<section>
								<label>#springMessage("data.exclusiveOffer")</label>
								<div>
									#select("exclusive", $!offer.Exclusive, $svh.getBooleanNames(${lang}), $svh.BooleanValues)
								</div>
							</section>

							<section>
								<label>#springMessage("data.country")</label>
								<div>
									#select("country", $!offer.Country, $svh.getCountryNames(${lang}), $svh.getCountryNames(${lang}))
								</div>
							</section>

							<section>
								<label>#springMessage("data.shopping")</label>
								<div>
									#multiselect("shoppings", $!offer.Shoppings, $shoppingOfferNames, $shoppingOfferIds)
									<button id="levelBrands" class="fr">#springMessage("app.button.levelBrands")</button>
								</div>
							</section>

							<section>
								<label>#springMessage("data.brand")</label>
								<div>
									#multiselect("brands", $!offer.Brands, $brandOfferNames, $brandOfferIds)
									<button id="levelShoppings" class="fr">#springMessage("app.button.levelShoppings")</button>
								</div>
							</section>

							<section>
								<label>#springMessage("data.areas")</label>
								<div>
									#multiselect("areas", $!offer.AreaId, $areaNames, $areaIds)
									<button id="levelAreas" class="fr">#springMessage("app.button.levelAreas")</button>
								</div>
							</section>

							<section>
								<label>#springMessage("data.availableFinancialEntities")</label>
								<div>
									#multiselect("availableFinancialEntities", $!offer.AvailableFinancialEntities, $financialEntityNames, $financialEntityIds)
								</div>
							</section>

							<label>#springMessage("app.offer.viewing")</label>

							<section>
								<label>#springMessage("data.notifyDays")</label>
								<div>
									#multiselect("notifyDays", $!offer.NotifyDays, $availableDaysNames, $availableDaysIds)
								</div>
							</section>

							<section>
								<label for="validFrom">#springMessage("data.validfrom")</label>
								<div>
									<input id="validFrom" name="validFrom" type="text" style="width: 90px !important;" value="$svh.formatDate($!offer.validFrom)">
								</div>
							</section>

							<section>
								<label for="validTo">#springMessage("data.validto")</label>
								<div>
									<input id="validTo" name="validTo" type="text" style="width: 90px !important;" value="$svh.formatDate($!offer.validTo)">
								</div>
							</section>

							<section>
								<div>
							#if( $canwrite == true )
								#if( $offerProposalId ) 
									<button class="fr submit">#springMessage("app.button.approve")</button>
									<button class="fr" onclick="window.location='/main-be/rejectOfferProposal/$offerProposalId';">#springMessage("app.button.reject")</button>
								#else
									<button class="fr submit">#springMessage("app.button.submit")</button>
								#end
							#else
								#if( $offerProposalId ) 
									<button class="fr" onclick="window.location='/main-be/offerProposalList';" >#springMessage("app.button.back")</button>
								#else
									<button class="fr" onclick="window.location='/main-be/offerList';" >#springMessage("app.button.back")</button>
								#end
							#end
								</div>
							</section>

							<section>
								<div id="contactFormMsg"></div>
							</section>

						</fieldset>
					</form>
				</div>

				#if( $update )
				<!-- Multimedia -->
				<div>
					<form id="mediaForm" method="post" #if( $canwrite == true ) action="doUpdateOfferMedia" #end autocomplete="off">
						<fieldset>
							<input type="hidden" id="offerid" value="$offer.Identifier">
							<label style="height: 30px;">
								#springMessage("app.offer.media")
								#if( $canwrite == true )
								<button class="fr submit">#springMessage("app.button.submit")</button>
								#else
								<button class="fr" onclick="window.location='/main-be/offerList';" >#springMessage("app.button.back")</button>
								#end
							</label>

							<section>
								<label for="mediaUpload">#springMessage("app.offer.uploadPhotos")<br>
								<span>#springMessage("app.offer.uploadPhotosMeasures")</span>
								</label>
								<div>
									<input type="file" id="mediaUpload" multiple>
								</div>
							</section>

							<section>
								<label for="media">#springMessage("app.offer.currentPhotos")</label>
								<ul id="mediaGallery" class="gallery">
								#foreach( $photo in $!offer.PhotoId )
									<li><a href="/img/$photo"><img src="/img/$photo" width="116" height="116" alt=""></a></li>
								#end
								</ul>
							</section>

							<section>
								<div>
									#if( $canwrite == true )
									<button class="fr submit">#springMessage("app.button.submit")</button>
									#else
									<button class="fr" onclick="window.location='/main-be/offerList';" >#springMessage("app.button.back")</button>
									#end
								</div>
							</section>

							<section>
								<div id="invoicingFormMsg"></div>
							</section>
							
						</fieldset>
					</form>
				</div>

				<!-- Audit -->
				<div>
					<form id="auditForm" autocomplete="off">
						<fieldset>
							<input type="hidden" id="offerid" value="$offer.Identifier">
							<label style="height: 30px;">
								#springMessage("app.audit")
							</label>

							<section>
								<label for="creationDateTime">#springMessage("app.audit.creationDateTime")</label>
								<div>
									$svh.formatDate($offer.creationDateTime) - $svh.formatTime($offer.creationDateTime)
								</div>
							</section>

							<section>
								<label for="lastUpdate">#springMessage("app.audit.lastUpdate")</label>
								<div>
									$svh.formatDate($offer.lastUpdate) - $svh.formatTime($offer.lastUpdate)
								</div>
							</section>

							<section>
								<label for="lastUpdate">#springMessage("app.audit.owner")</label>
								<div>
									$offer.acl.owner
								</div>
							</section>

							<section>
								<div id="auditFormMsg"></div>
							</section>

						</fieldset>
					</form>
				</div>

				<!-- Privacy Policies -->
				<div>
					<form id="policiesForm" method="post" #if( $canwrite == true ) action="doUpdateOfferPolicies" #end autocomplete="off">
						<fieldset>
							<input type="hidden" id="offerid" value="$offer.Identifier">
							<label style="height: 30px;">
								#springMessage("app.profile.privacyPolicies")
								#if( $canwrite == true )
								<button class="fr submit">#springMessage("app.button.submit")</button>
								#else
								<button class="fr" onclick="window.location='/main-be/offerList';" >#springMessage("app.button.back")</button>
								#end
							</label>
							<section>
								<label>#springMessage("data.privacyPolicies")</label>
								<div>
									<textarea id="policies" class="html" rows="30" data-buttons="bold|italic|underline">$!offer.policies</textarea>
								</div>
							</section>

							<section>
								<div>
									#if( $canwrite == true )
									<button class="fr submit">#springMessage("app.button.submit")</button>
									#else
									<button class="fr" onclick="window.location='/main-be/offerList';" >#springMessage("app.button.back")</button>
									#end
								</div>
							</section>

							<section>
								<div id="policiesFormMsg"></div>
							</section>

						</fieldset>
					</form>
				</div>

				<!-- Notifications -->
				<div>
					<div class="g12 nodrop">
						<h1>#springMessage("app.user.notifications")</h1>
					</div>
					<table id="offerDeliveredMessages" class="datatable">
						<thead>
							<tr>
								<th>#springMessage("data.userId")</th>
								<th>#springMessage("data.notifyDate")</th>
								<th>#springMessage("data.receivedDate")</th>
							</tr>
						</thead>
						<tbody>
							<tr class="gradeX">
							</tr>
						</tbody>
					</table>
				</div>

				#end
			</div>
		</div>

	</section>
#parse("includes/footer.vm")
</body>
</html>