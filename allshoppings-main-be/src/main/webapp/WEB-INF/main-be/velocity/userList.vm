#parse("/includes/macros.vm")
<!doctype html>
<html lang="en-us">
<head>
	<meta charset="utf-8">
	<title>#springMessage("app.title") | #springMessage("app.userList")</title>

	<meta name="description" content='#springMessage("app.userList.description")'>
	<meta name="author" content='#springMessage("app.url")'>

#parse("includes/header.vm")

	<!-- local functionality script -->
	<script src="/main-be/js/userList.js"></script>
</head>
<body>
#parse("includes/topmenu.vm")
#parse("includes/leftmenu.vm")
	<!-- content -->
	<section id="content">
		<div class="g12 nodrop">
			<h1>#springMessage("app.userList")</h1>
			<p>#springMessage("app.userList.description")</p>
			#if( $!userInfo.Role != 13 )
			<a href="/main-be/user/"><button class="i_plus icon">#springMessage("app.userList.new")</button></a>
			#end
		</div>
		<table id="userRecords" class="datatable">
			<thead>
				<tr>
					<th>#springMessage("app.userList.username")</th>
					<th>#springMessage("app.userList.fullname")</th>
					<th>#springMessage("app.userList.email")</th>
					<th>#springMessage("app.userList.role")</th>
					<th>#springMessage("app.userList.activityStatus")</th>
					<th width="90">#springMessage("app.table.actions")</th>
				</tr>
			</thead>
			<tbody>
				<tr class="gradeX">
				</tr>
			</tbody>
		</table>
	</section>
#parse("includes/footer.vm")
</body>
</html>