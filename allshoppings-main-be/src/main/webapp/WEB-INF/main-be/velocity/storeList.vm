#parse("/includes/macros.vm")
<!doctype html>
<html lang="en-us">
<head>
	<meta charset="utf-8">
	<title>#springMessage("app.title") | #springMessage("app.storeList")</title>

	<meta name="description" content='#springMessage("app.storeList.description")'>
	<meta name="author" content='#springMessage("app.url")'>

#parse("includes/header.vm")

	<!-- local functionality script -->
	<script src="/main-be/js/storeList.js"></script>
</head>
<body>
#parse("includes/topmenu.vm")
#parse("includes/leftmenu.vm")
	<!-- content -->
	<section id="content">
		<div class="g12 nodrop">
			<h1>#springMessage("app.storeList")</h1>
			<p>#springMessage("app.storeList.description")</p>
			#if( $!userInfo.Role != 13 )
			<a href="/main-be/store/"><button class="i_plus icon">#springMessage("app.storeList.new")</button></a>
			#end
		</div>
		<table id="storeRecords" class="datatable">
			<thead>
				<tr>
					<th>#springMessage("app.storeList.shopping")</th>
					<th>#springMessage("app.storeList.brand")</th>
					<th>#springMessage("app.storeList.name")</th>
					<th>#springMessage("app.storeList.storeNumber")</th>
					<th>#springMessage("app.storeList.floorNumber")</th>
					<th>#springMessage("data.status")</th>
					<th>#springMessage("app.table.actions")</th>
				</tr>
			</thead>
			<tbody>
				<tr class="gradeX">
				</tr>
			</tbody>
		</table>
	</section>
#parse("includes/footer.vm")
</body>
</html>